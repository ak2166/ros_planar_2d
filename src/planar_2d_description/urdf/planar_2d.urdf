<robot name="planar_2d">
    <link name="base"/>
    <link name="link1"/>
    <link name="link2"/>

    <joint name="joint1" type="continuous">
    	   <parent link="base"/>
	   <child link="link1"/>
	   <origin xyz="0 0 .05" rpy="0 0 0"/>
	   <axis xyz="0 0 1"/>
    />

    <joint name="joint2" type="continuous">
    	   <parent link="link1"/>
	   <child link="link2"/>
	   <origin xyz=".1 0 0" rpy="0 0 0"/>
	   <axis xyz="0 0 1"/>
    />